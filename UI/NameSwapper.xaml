<Window x:Class="PyRevitChallenge.UI.NameSwapper"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Name Swapper"
        Height="450" Width="700">

    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>

        <!-- LEFT: Revit-style Browser -->
        <ListView x:Name="ViewTree"
                  Grid.Column="0"
                  Margin="0,0,10,0"
                  SelectionMode="Extended"
                  SelectionChanged="ViewTree_SelectionChanged"/>

        <!-- RIGHT: Rename Controls -->
        <StackPanel Grid.Column="1">
            <TextBlock Text="Name Swapper"
                       FontSize="16"
                       FontWeight="Bold"
                       Margin="0,0,0,10"/>

            <Label Content="Prefix:" FontWeight="Bold"/>
            <TextBox x:Name="Text_Prefix"/>

            <Label Content="Find:" FontWeight="Bold"/>
            <TextBox x:Name="Text_Find"/>

            <Label Content="Replace:" FontWeight="Bold"/>
            <TextBox x:Name="Text_RePlace"/>

            <Label Content="Suffix:" FontWeight="Bold"/>
            <TextBox x:Name="Text_Sufix"/>

            <Button Content="Rename Selected"
                    Height="30"
                    Margin="0,15,0,0"
                    Click="SelectButton_Click"/>
        </StackPanel>
    </Grid>
</Window>