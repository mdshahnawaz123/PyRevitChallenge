<Window x:Class="PyRevitChallenge.UI.FlatSummarize"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Flat Summary"
        Height="450" Width="550"
        WindowStartupLocation="CenterScreen">

    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- LEFT: Room List -->
        <ListView x:Name="RoomArea"
                  Grid.Column="0"
                  Margin="0,0,10,0"
                  SelectionMode="Extended"
                  SelectionChanged="RoomArea_OnSelectionChanged">

            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Room"
                                    DisplayMemberBinding="{Binding Name}"
                                    Width="160"/>
                    <GridViewColumn Header="Number"
                                    DisplayMemberBinding="{Binding Number}"
                                    Width="80"/>
                </GridView>
            </ListView.View>
        </ListView>

        <!-- RIGHT: Summary Panel -->
        <Border Grid.Column="1"
                Padding="10"
                BorderBrush="#DDD"
                BorderThickness="1"
                CornerRadius="5">

            <StackPanel>
                <TextBlock Text="Flat Summary"
                           FontSize="16"
                           FontWeight="Bold"
                           Margin="0,0,0,15"/>

                <Label Content="Total Area:" FontWeight="Bold"/>
                <TextBlock x:Name="TotalArea"
                           FontSize="14"
                           Margin="0,0,0,10"/>

                <Label Content="Selected Area:" FontWeight="Bold"/>
                <TextBlock x:Name="SelectedArea"
                           FontSize="14"
                           Margin="0,0,0,10"/>
            </StackPanel>
        </Border>

        <!-- Bottom Button -->
        <Button Grid.Row="1"
                Grid.ColumnSpan="2"
                Content="Show in Revit"
                Height="32"
                Margin="0,10,0,0"
                Click="SelectButton_Click"/>
    </Grid>
</Window>