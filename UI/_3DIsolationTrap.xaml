<Window x:Class="PyRevitChallenge.UI._3DIsolationTrap"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="BIM Digital Design"
        Height="480" Width="650"
        WindowStartupLocation="CenterScreen"
        Loaded="Window_Loaded">

    <Window.Resources>
        <Storyboard x:Key="FadeInText">
            <DoubleAnimation Storyboard.TargetName="FactText"
                             Storyboard.TargetProperty="Opacity"
                             From="0" To="1"
                             Duration="0:0:0.4"/>
        </Storyboard>
    </Window.Resources>

    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- LEFT -->
        <StackPanel Grid.Column="0" Margin="10">
            <Label Content="Category"/>
            <TextBox Height="25"/>

            <Label Content="Element" Margin="0,10,0,0"/>
            <TextBox Height="25"/>
        </StackPanel>

        <!-- RIGHT PANEL -->
        <Border Grid.Column="1"
                Background="#1E1E1E"
                CornerRadius="10"
                Padding="12">

            <StackPanel>

                <!-- Header -->
                <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                    <Ellipse Width="40" Height="40">
                        <Ellipse.Fill>
                            <ImageBrush x:Name="ErikImageBrush"/>
                        </Ellipse.Fill>
                    </Ellipse>

                    <TextBlock Text=" 💡 Did You Know?"
                               Foreground="White"
                               FontWeight="Bold"
                               VerticalAlignment="Center"
                               Margin="10,0,0,0"/>
                </StackPanel>

                <!-- Fact -->
                <TextBlock x:Name="FactText"
                           Foreground="White"
                           TextWrapping="Wrap"
                           Opacity="0"
                           Margin="0,0,0,10"/>

                <!-- Button -->
                <Button Content="Next Fact"
                        Width="100"
                        Click="NextFact_Click"/>
            </StackPanel>
        </Border>

        <!-- Bottom -->
        <Button Grid.ColumnSpan="2"
                VerticalAlignment="Bottom"
                Height="30"
                Content="3D Isolation Trap"
                Click="SelectButton_Click"/>
    </Grid>
</Window>