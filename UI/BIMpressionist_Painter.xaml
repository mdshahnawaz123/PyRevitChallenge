<Window x:Class="PyRevitChallenge.UI.BIMpressionist_Painter"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="BIM Digital Design"
        Height="500" Width="900">

    <Grid Margin="10">

        <!-- ROWS -->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- COLUMNS -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>

        <!-- TITLE -->
        <Label Content="BIMpressionist Painter"
               Grid.Row="0"
               Grid.ColumnSpan="3"
               HorizontalAlignment="Center"
               FontSize="18"
               FontWeight="Bold"
               Margin="0,0,0,10"/>

        <!-- ================= LEFT: CATEGORIES ================= -->
        <Grid Grid.Row="1" Grid.Column="0" Margin="0,0,10,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Label Content="Categories"
                   FontSize="16"
                   FontWeight="Bold"/>

            <ListView x:Name="CategoryList"
                      Grid.Row="1"
                      SelectionMode="Extended"
                      SelectionChanged="CategoryToElment"
                      BorderBrush="#DDD"
                      BorderThickness="1"/>
        </Grid>

        <!-- ================= MIDDLE: ELEMENTS ================= -->
        <Grid Grid.Row="1" Grid.Column="1" Margin="0,0,10,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Label Content="Elements"
                   FontSize="16"
                   FontWeight="Bold"/>

            <ListView x:Name="SelectedElementList"
                      Grid.Row="1"
                      SelectionMode="Extended"
                      BorderBrush="#DDD"
                      BorderThickness="1"/>
        </Grid>

        <!-- ================= RIGHT: COLOR PANEL ================= -->
        <StackPanel Grid.Row="1" Grid.Column="2">

            <Label Content="Color"
                   FontSize="16"
                   FontWeight="Bold"/>

            <!-- Color Preview -->
            <Border x:Name="ColorPreview"
                    Height="120"
                    Background="White"
                    BorderBrush="Gray"
                    BorderThickness="1"
                    CornerRadius="6"
                    Margin="0,5"/>

            <!-- Pick Color -->
            <Button Content="Pick Color"
                    Margin="0,5,0,10"
                    Click="PickColor_Click"/>

            <!-- Assign + Clear -->
            <StackPanel Orientation="Horizontal">
                <Button Content="Assign Color"
                        Width="120"
                        Margin="0,0,10,0"
                        Click="AssignColor_Click"/>

                <Button Content="Clear Override"
                        Width="120"
                        Click="ClearOverride_Click"/>
            </StackPanel>

        </StackPanel>

        <!-- ================= BOTTOM BUTTON ================= -->
        <Button Content="Show in Revit"
                Grid.Row="2"
                Grid.Column="2"
                HorizontalAlignment="Right"
                Margin="0,10,0,0"
                Width="140"
                Click="ShowInRevit_Click"/>

    </Grid>
</Window>