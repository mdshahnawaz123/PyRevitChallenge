<Window x:Class="PyRevitChallenge.UI.DoorSwing"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                Title="BIM Digital Design"
                Height="320"
                Width="300"
                ResizeMode="NoResize">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <!-- Title -->
        <TextBlock Text="Door Swing" 
               Grid.Column="0" 
               Grid.ColumnSpan="3"
               FontSize="16"
               FontWeight="Bold"
               HorizontalAlignment="Center"
               Margin="0,0,0,10"/>

        <!-- List -->
        <ListBox Grid.Row="1" Grid.Column="1"
             x:Name="RightDoorSwing"
             DisplayMemberPath="Name"
             SelectionMode="Extended"/>

        <!-- List -->
        <ListBox Grid.Row="1" Grid.Column="2"
            x:Name="LeftDoorSwing"
            DisplayMemberPath="Name"
            SelectionMode="Extended"/>

        <!-- Button -->
        <Button Grid.Row="2" Grid.ColumnSpan="3"
            Content="Show in Revit"
            Height="30"
            Margin="0,10,0,0"
            Click="SelectButton_Click"/>
    </Grid>
</Window>
